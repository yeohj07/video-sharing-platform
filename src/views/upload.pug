extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description")
        input(placeholder="Hashtags (separate by comma)", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")